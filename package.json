		"@types/fs-extra": "^11.0.4",
		"@typescript-eslint/eslint-plugin": "^7.17.0",
		"@typescript-eslint/parser": "^7.17.0",
		"esbuild": "^0.23.0",
		"eslint": "^8.57.0",
		"eslint-config-alloy": "^5.1.2",
		"eslint-plugin-tsdoc": "^0.3.0",
		"fs-extra": "^11.2.0",
		"husky": "^9.1.1",
		"jszip": "^3.10.1",
		"lint-staged": "^15.2.7",
		"prettier": "^3.3.3",
		"rimraf": "^6.0.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.5.4"
